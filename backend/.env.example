# Copy this to .env and populate the values for your environment
# Do NOT commit real API keys to version control.

# Firebase service account JSON file path (relative to backend root)
FIREBASE_SERVICE_ACCOUNT=serviceAccount.json
# For local development without Firebase, bypass token verification
# WARNING: Only use in local dev; never enable in production
DEV_AUTH_BYPASS=0

# SendGrid API key (get from SendGrid dashboard)
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY_HERE

# Verified sender address in your SendGrid account (from which emails will appear to come)
# Example: pagadojuumesh870@gmail.com
SENDER_EMAIL=you@yourdomain.com
# Brand name shown in recipients' inbox (keep as Aluminiconnect)
SENDER_NAME=Aluminiconnect

# Optional GCP project id and Pub/Sub topics (if using Pub/Sub for background jobs)
PROJECT_ID=your-gcp-project-id
PUBSUB_EMAIL_TOPIC=email-jobs
PUBSUB_PARSE_TOPIC=parse-jobs
